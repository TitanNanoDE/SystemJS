{
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    },
    "rules" : {
        "no-unused-vars" : 2,
        "no-undef" : 2,
        "valid-typeof" : 2,
        "valid-jsdoc" : 2,
        "no-unreachable" : 2,
        "dot-notation" : 2,
        "no-magic-numbers" : 2,
        "no-redeclare" : 2,
        "no-unused-labels" : 2,
        "yoda" : 2,
        "no-var" : 2,
        "prefer-arrow-callback" : 2,
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6
    }
}
